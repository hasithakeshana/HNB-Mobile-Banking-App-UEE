<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_credits"
    tools:context=".add_provider_ui">


    <Button
        android:id="@+id/button3"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/button"
        android:onClick="addProviderButton"
        android:text="ADD PROVIDER"
        android:textColor="@color/dark_blue"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email3" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="385dp"
        android:layout_height="495dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/credit_card_add_background"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="Jane Appleseed"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/email4"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="xxxxxxxxx"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <EditText
        android:id="@+id/email3"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="MY MOBILE"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER ACCOUNT NUMBER"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="226dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="ACCOUNT HOLDER NAME"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email4" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:text="DISPLAY NAME"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email2" />

</androidx.constraintlayout.widget.ConstraintLayout>