<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_credits"
    tools:context=".add_provider_ui">

    <Button
        android:id="@+id/button3"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ripple_effect_rate_btn"

        android:text="ADD PROVIDER"
        android:textColor="@color/dark_blue"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView28"
        android:layout_width="385dp"
        android:layout_height="550dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/credit_card_add_background"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="Jane Appleseed"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/email4"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="xxxxxxxxx"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <EditText
        android:id="@+id/email3"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="MY MOBILE"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="124dp"
        android:text="ENTER ACCOUNT NUMBER"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="226dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="ACCOUNT HOLDER NAME"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email4" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="DISPLAY NAME"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anima2"
        android:layout_width="141dp"
        android:layout_height="96dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/account_under_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/bill_payment_2" />

</androidx.constraintlayout.widget.ConstraintLayout>