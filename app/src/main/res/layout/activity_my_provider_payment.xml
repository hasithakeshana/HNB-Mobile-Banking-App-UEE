<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bill_payments_bg"
    tools:context=".my_provider_payment">


    <Button
        android:id="@+id/button3"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_button"
        android:onClick="myProviderPaymentButton"
        android:text="MAKE PAYMENT"
        android:textColor="#3C3C3C"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="385dp"
        android:layout_height="421dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/credit_card_add_background"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="DD-MM-YYYY"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/email4"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="0.0"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT (IN LKR.)"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="226dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="EFFECTIVE DATE"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email4" />

</androidx.constraintlayout.widget.ConstraintLayout>