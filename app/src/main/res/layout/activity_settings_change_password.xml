<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_credits"
    tools:context=".settings_change_password">


    <Button
        android:id="@+id/newPwd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/eye"
        android:onClick="viewNewPwd"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/editTxtNewPwd"
        app:layout_constraintStart_toEndOf="@+id/editTxtNewPwd"
        app:layout_constraintTop_toTopOf="@+id/editTxtNewPwd"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/confPwd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/eye"
        android:onClick="viewConfPwd"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/editTxtConfPwd"
        app:layout_constraintStart_toEndOf="@+id/editTxtConfPwd"
        app:layout_constraintTop_toTopOf="@+id/editTxtConfPwd"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ripple_effect_rate_btn"
        android:text="Update"
        android:textColor="#3C3C3C"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtConfPwd" />

    <EditText
        android:id="@+id/editTxtOldPwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/default_light_gray_background"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/editTxtNewPwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/default_light_gray_background"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/editTxtConfPwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/default_light_gray_background"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/oldPwd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/eye"
        android:onClick="viewOldPwd"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/editTxtOldPwd"
        app:layout_constraintStart_toEndOf="@+id/editTxtOldPwd"
        app:layout_constraintTop_toTopOf="@+id/editTxtOldPwd"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Change Password"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Current Password"
        android:textColor="#004590"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textColor="#004590"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtOldPwd" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Confirm Password"
        android:textColor="#004590"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtNewPwd" />

</androidx.constraintlayout.widget.ConstraintLayout>