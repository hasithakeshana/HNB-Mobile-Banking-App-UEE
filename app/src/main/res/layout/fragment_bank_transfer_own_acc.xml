<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bank_transfer_own_acc">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="372dp"
        android:layout_height="481dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/credit_card_add_background"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/email3"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_input_field"
        android:ems="10"
        android:hint="REASON FOR TRANSFER"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT ACCOUNT"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginBottom="296dp"
        android:text="AMOUNT (IN LKR)"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/spinner4"
        app:layout_constraintVertical_bias="0.975" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:text="NARRATION"
        android:textColor="#014590"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/email2" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_input_field"
        android:entries="@array/own_accs"
        android:textColor="#014590"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

</androidx.constraintlayout.widget.ConstraintLayout>